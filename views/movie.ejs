<!DOCTYPE html>
<html>
  <head>
    <title>UMovie</title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <form>
                Search
                <input type="text" name="search">
                </form>
  </head>
  <body>
    <nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <a class="navbar-brand" href="/">UMovie</a>
	    </div>
	    <div>
	      <ul class="nav navbar-nav">
	        <li><a href="/">Home</a></li>
	        <li><a href="/topRanked">Top Ranked</a></li>
	        <li><a href="/tagsMovie">Movie Tags</a></li>
	      </ul>
	    </div>
	  </div>
	</nav>
    <div class="heading">
   		<% if (!user) { %>
			<h2>Welcome! Please log in.</h2>
			<a href="/login">Login</a>
		<% } else { %>
			<h2>Hello, <%= user.displayName %>.</h2>
			<a href="/account">My Account</a>
			<a href="/logout">Logout</a>
		<% } %>
    	<% if (movieDetail == null) { %>
        <% } 
           else { %>
				<% for(var i=0; i<movieDetail.length; i++) { %>
                    <p><%= movieDetail[i].name %></p>
                    <img src="<%= movieDetail[i].poster %>" height = "342"/>
                    <p>Rating: <%= movieDetail[i].rating %></p>
                    <p>Abstraction: <%= movieDetail[i].abstraction %></p>
				<% } %>
		<% } %>	
                    <p> Crew: </p>
        <% if (person == null) { %>
        <% } 
           else { %>
                <% for(var i=0; i<person.length; i++) { %>
                    <p> <%= person[i].job %>: <%= person[i].pname %></p>
                <% } %>
        <% } %> 
		 <% if (search_results != null) { %>
                <p>Search results:</p>
                <% for (var i = 0; i< search_results.length; i++) { %>
                    <p><%= search_results[i].mname %></p> 
                    <form method="get" action="/movies">
                        <button type="submit" name = "movie_id" value = <%= search_results[i].movie_id %> class="btn btn-warning btn-lg">See more</button>
                    </form>
                    <img src="<%= search_results[i].poster %>" height = "342"/>
                    <p><%= search_results[i].rating %></p> 
                    <p><%= search_results[i].pname %></p> 
                    <p><%= search_results[i].i_job %></p> 
                    <p><%= search_results[i].rating %></p> 
                    <p><%= search_results[i].abstraction %></p> 
                    <p><%= search_results[i].date %></p> 
                    <p><%= search_results[i].poster %></p> 
                    
                <% } %>
            <% } %>

    </div>
  </body>
</html>
