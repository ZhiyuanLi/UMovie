<!DOCTYPE html>
<html>
<head>
<title>UMovie</title>
<link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
<link rel='stylesheet' href='/stylesheets/style.css' />
<form>
	Search <input type="text" name="search">
</form>
</head>
<body>

	<% if (!user) { %>
		<p>Login or Register with:</p>
        <a href="/log_in" class="btn btn-default"><span class="fa fa-user"></span> Local Login</a>
        <a href="/signup" class="btn btn-default"><span class="fa fa-user"></span> Local Signup</a>
      	 <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Facebook</a>
		<% } else { %>
			<h2>Hello, <%= user.email %>.</h2>
			<a href="/profile" class="btn btn-default"><span class="fa fa-user"></span> My Account</a>
			<a href="/log_out" class="btn btn-default"><span class="fa fa-user"></span> Logout</a>
		<% } %>

	<nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">UMovie</a>
			</div>
			<div>
				<ul class="nav navbar-nav">
					<li><a href="/">Home</a></li>
					<li><a href="/topRanked">Top Ranked</a></li>
					<li class="active"><a href="/tagsMovie">Movie Tags</a></li>
				</ul>
			</div>
		</div>
	</nav>
	<div class="heading">
    	<% var movie_id %> 

		<% if (search_results != null) { %>
			<p>Search results:</p>
			<% for (var i = 0; i< search_results.length; i++) { %>
				<p><%= search_results[i].mname %></p>
				<img src="<%= search_results[i].poster %>" height="342" />
				<form method="get" action="/movies">
				<button type="submit" name="movie_id" value=<%= search_results[i].movie_id %> class="btn btn-warning btn-lg">See more</button>
				</form>
				<p><%= search_results[i].rating %></p> 
				<p><%= search_results[i].abstraction %></p>
				<p><%= search_results[i].date %></p>
			<% } %>
		<% }
			else { %>
				<% if (tagsResult != null) { %>
					
					<% for (var i = 0; i< tagsResult.length; i++) { %>
					<p><%= tagsResult[i].name %></p>
					<img src="<%= tagsResult[i].poster %>" height="342" />
					<form method="get" action="/movies">
						<button type="submit" name="movie_id" value=<%= tagsResult[i].movie_id %> class="btn btn-warning btn-lg">See more</button>
					</form>
					<p><%= tagsResult[i].rating %></p> 
					<p><%= tagsResult[i].abstraction %></p>
					<p><%= tagsResult[i].date %></p>
					<% } %>
				<% }
					else %>				

					<% if (tagsMovie == null) { %> 
					<% } else { %> 
					<% for(var i=0; i<tagsMovie.length; i++) { %> 
					<form method="get" action="/tagsMovie">
						<button type="submit" name = "tags" value=<%= tagsMovie[i].genre %> class="btn btn-warning btn-lg"><%= tagsMovie[i].genre %>
						</button>
					</form>
					<% } %> 
				<% } %> 
	<% } %>

		

    </div>
  </body>
</html>
