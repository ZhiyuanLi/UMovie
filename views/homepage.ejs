      </script>
      <![endif]-->
      <!-- ENDS JS -->
      <!-- tabs -->
      <link rel="stylesheet" href="stylesheets/tabs.css" type="text/css" media="screen" />
      <script type="text/javascript" src="js/tabs.js"></script>
      <!-- ENDS tabs -->
      <!-- prettyPhoto -->
      <script type="text/javascript" src="js/prettyPhoto/js/jquery.prettyPhoto.js"></script>
      <link rel="stylesheet" href="js/prettyPhoto/css/prettyPhoto.css" type="text/css" media="screen" />
      <!-- ENDS prettyPhoto -->
      <!-- superfish -->
      <link rel="stylesheet" media="screen" href="stylesheets/superfish.css" />
      <link rel="stylesheet" media="screen" href="stylesheets/superfish-left.css" />
      <script type="text/javascript" src="js/superfish-1.4.8/js/hoverIntent.js"></script>
      <script type="text/javascript" src="js/superfish-1.4.8/js/superfish.js"></script>
      <script type="text/javascript" src="js/superfish-1.4.8/js/supersubs.js"></script>
      <!-- ENDS superfish -->
      <!-- poshytip -->
      <link rel="stylesheet" href="js/poshytip-1.0/src/tip-twitter/tip-twitter.css" type="text/css" />
      <link rel="stylesheet" href="js/poshytip-1.0/src/tip-yellowsimple/tip-yellowsimple.css" type="text/css" />
      <script type="text/javascript" src="js/poshytip-1.0/src/jquery.poshytip.min.js"></script>
      <!-- ENDS poshytip -->
   </head>
   <body>
      <!-- HEADER -->
      <div id="bottom">
      </div>
      <div id="header">
         <!-- wrapper-header -->
         <div class="wrapper">
            <!-- Social -->
            <% if (!user) { %>
            <ul class="social ">
               <li><a href="/signup" class="poshytip email" title="Join us"></a></li>
               <li><a href="/log_in" class="poshytip myspace" title="Sign in"></a></li>
               <li><a href="/auth/facebook" class="poshytip facebook" title="Facebook login"></a></li>
            </ul>
            <% } else { %>
            <toptext>
               <a href="/profile" style = "color:#e09015">My Account</a>
               &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
               <a href="/log_out" style = "color:#e09015">Logout </a>
               <br>
               <br>
               Hello, <%= user.email %>.
            </toptext>
            <% } %>
            <!-- ENDS Social -->
            <!-- search -->
            <div class="top-search">
               <form  method="get" id="searchform" action="#">
                  <div>
                     <input type="text" value="Bing Search..." name="bingSearch" id="s" onfocus="defaultInput(this,'Bing Search...')" onblur="clearInput(this,'Bing Search...')" />
                     <input type="submit" id="searchsubmit" value=" " />
                  </div>
               </form>
            </div>
            <!-- ENDS search -->
            <!-- headline -->
            <div id="headline" align="center">
               UMovie
            </div>
            <!-- ENDS headline -->
            <!-- Navigation -->
            <ul id="nav" class="sf-menu">
               <li class="current-menu-item"><a href="/">Home</a></li>
               <li><a href="/topRanked">Top Ranked</a></li>
               <li><a href="/tagsMovie">Movie Tags</a></li>
            </ul>
            <!-- Navigation -->
         </div>
         <!-- ENDS wrapper-header -->
         <div id="top-torn"></div>
      </div>
      <!-- ENDS HEADER -->
      <!-- MAIN -->
      <div id="main">
         <!-- wrapper-main -->
         <div class="wrapper">
            <div id = "videobar">
               <div class="video" data-thumb="https://i.vimeocdn.com/video/528991458.webp?mw=2000&amp;mh=929&amp;q=70" style="background-image: none;">
                  <div class="telecine">
                     <video preload="" src="https://15-lvl3-pdl.vimeocdn.com/01/2034/5/135171559/399614898.mp4?expires=1449467487&amp;token=0fc2617db551264dbc1f8" loop="loop" autoplay = "autoplay" ></video>
                  </div>
               </div>
            </div>
         </div>
         <div class="wrapper">
            <!-- Posts -->
            <div>
               <br>
               <ul class="blocks-thumbs">
                  <% if (latestMovies == null) { %>
                  <% } else { %>
                  <div class="wrapper">
                     <!--  filmbar-->      
                     <div id="filmbar">
                        <div id="filmbar-text">Latest Films</div>
                     </div>
                     <!-- ENDS filmbar -->
                     <!-- search -->
                     <div class="top-search">
                        <form  method="get" id="searchform" action="#">
                           <div>
                              <input type="text" value="Search..." name="search" id="s" onfocus="defaultInput(this,'Search...')" onblur="clearInput(this,'Search...')" />
                              <input type="submit" id="searchsubmit" value=" " />
                           </div>
                        </form>
                     </div>
                     <!-- ENDS search -->
                  </div>
                  <% for (var i = 0; i< latestMovies.length; i++) { %>
                  <li >
                     <a href="/movies?movie_id=<%= latestMovies[i].movie_id %>" class="thumb" title="An image"><img src="<%= latestMovies[i].poster %>" alt="Post" width = "300" height = "450" /></a>
                     <div class="excerpt">
                        <a href= "/movies?movie_id=<%= latestMovies[i].movie_id %>" class="header"><%= latestMovies[i].name %>&nbsp;&nbsp;&nbsp;&nbsp;<span style = "color:#e09015"><strong><%= latestMovies[i].rating %></strong></span></a>
                        <div class="meta"><%= latestMovies[i].date %></div>
                     </div>
                  </li>
                  <% } %> 
                  <% } %> 
               </ul>
            </div>
            <% if (search_results != null) { %>
            <!--  search_results-->
            <div class="wrapper">
               <!--  filmbar-->      
               <div id="filmbar">
                  <div id="filmbar-text">Films</div>
               </div>
               <!-- ENDS filmbar -->
               <!-- search -->
               <div class="top-search">
                  <form  method="get" id="searchform" action="#">
                     <div>
                        <input type="text" value="Search..." name="search" id="s" onfocus="defaultInput(this,'Search...')" onblur="clearInput(this,'Search...')" />
                        <input type="submit" id="searchsubmit" value=" " />
                     </div>
                  </form>
               </div>
               <!-- ENDS search -->
            </div>
            <div>
               <br>
               <ul class="blocks-thumbs">
                  <% for (var i = 0; i< search_results.length; i++) { %>
                  <li >
                     <a href="/movies?movie_id=<%= search_results[i].movie_id %>" class="thumb" title="An image"><img src="<%= search_results[i].poster %>" alt="Post" width = "300" height = "450" /></a>
                     <div class="excerpt">
                        <a href= "/movies?movie_id=<%= search_results[i].movie_id %>" class="header"><%= search_results[i].mname %>&nbsp;&nbsp;&nbsp;&nbsp;<span style = "color:#e09015"><strong><%= search_results[i].rating %></strong></span></a>
                        <div class="meta"><%= search_results[i].date %></div>
                     </div>
                  </li>
                  <% } %> 
                  <% } %>
                  <% if (bing_search_results != null) { %>
                  <p>Bing Search results:</p>
                  <% for (var i = 0; i< bing_search_results.length; i++) { %>
                  <table>
                     <tr>
                        <td><a href =<%=  bing_search_results[i].Url%>><%= bing_search_results[i].Title%></a></td>
                        <td><%= bing_search_results[i].Description %></td>
                     </tr>
                  </table>
                  <% } %>
                  <% } %>
                  <!-- ENDS search_results -->
               </ul>
            </div>
            <!-- ENDS posts -->
            <div class="clear"></div>
         </div>
         <!-- ENDS wrapper-main -->
      </div>
      <!-- ENDS Main -->
      <!-- FOOTER -->
      <div id="footer">
         <!-- wrapper-footer -->
         <div class="wrapper">
            <div  class="to-top poshytip" title="To top">to top</div>
            <div id="bottom-text">UMovie by FF team</div>
         </div>
         <!-- ENDS wrapper-footer -->
      </div>
      <!-- ENDS FOOTER -->
   </body>
</html>