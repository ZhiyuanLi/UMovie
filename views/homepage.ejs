<!-- HEADER -->
		<div id="header">
			<!-- wrapper-header -->
			<div class="wrapper">
			
	<% if (!user) { %>
			 <p>Login or Register with:</p>

        <a href="/log_in" class="btn btn-default"><span class="fa fa-user"></span> Local Login</a>
