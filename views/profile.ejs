<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/log_out" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-10">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<p>
						<strong>id</strong>: <%= user.email %><br>
						<strong>username</strong>: <%= user.username %><br>
					</p>
					<strong>Movie I Liked</strong>
					<% for (var i =0; i <userLike.length; i++){ %>
					<p><%= userLike[i].likeMovie%></p>
					<% } %>
					<strong>Movie I Disliked</strong>
					<% for (var i =0; i <userDislike.length; i++){ %>
					<p><%= userDislike[i].dislikeMovie%></p>
					<% } %>
					<strong>My reviews</strong>
					<table>
					<% for (var i =0; i <userComment.length; i++){ %>
					<tr>
      				<td><strong><%= userComment[i].name%><strong></td>
      				<td><%= userComment[i].content%></td>
    				</tr>  
					<% } %>
					</table>

			</div>
		</div>
		


	</div>

</div>
</body>
</html>
