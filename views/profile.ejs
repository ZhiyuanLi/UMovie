<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Profile Page</h1>
		<a href="/log_out" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-12">
			<div class="well">
			 
				<h3><span class="fa fa-user"></span> User Name:    <%= user.email %></h3>

				
				<div class = "content">
				<div class = "padding">
				<div class="col-sm-6">
					<h3 class = "p-title">Movie I Liked</h3>
					<% for (var i =0; i <userLike.length; i++){ %>
					<p><%= userLike[i].likeMovie%></p>
					<% } %>
					<br>
					</div>
					<div class="col-sm-6">
					<h3 class = "p-title">Movie I Disliked</h3>
					<% for (var i =0; i <userDislike.length; i++){ %>
					<p><%= userDislike[i].dislikeMovie%></p>
					<% } %>
					<br>
					</div>
					
					<div class="col-sm-12">
					<h3 class = "p-title">My reviews</h3>
					<table>
					<% for (var i =0; i <userComment.length; i++){ %>
					<tr>
      				<td class="col-sm-4"><strong><%= userComment[i].name%><strong></td>
      				<td class="col-sm-8"><%= userComment[i].content%></td>
    				</tr>  
					<% } %>
					</table>
					</div>
					<div class="col-sm-12">
					<h3 class = "p-title">Friends</h3>
					<table>
					<% for (var i =0; i <userFriends1.length; i++){ %>
					<tr>
      				<td class="col-sm-4"><strong><%= userFriends1[i].person1%><strong></td>
      				<td>
      					<form action= "/deleteFriend" method="get" >
						<button type="submit"  name = "deleteFriend" value = <%= userFriends1[i].person1%>  style= "-moz-border-radius: 10px;-webkit-border-radius: 10px; border-radius: 10px; background: #ffd8eb ;color:white;padding:5px;font-size:18px;border:none;padding:8px;">Delete Friend</button>
						</form>
					</td>
    				</tr> 
    				<% } %>
    				<% for (var i =0; i <userFriends2.length; i++){ %>
					<tr>
      				<td class="col-sm-4"><strong><%= userFriends2[i].person2%><strong></td>
      				<td>
      					<form action= "/deleteFriend" method="get" >
						<button type="submit"  name = "deleteFriend" value = <%= userFriends2[i].person2%>  style= "-moz-border-radius: 10px;-webkit-border-radius: 10px; border-radius: 10px; background: #ffd8eb ;color:white;padding:5px;font-size:18px;border:none;padding:8px;">Delete Friend</button>
						</form>
					</td>
    				</tr>  
					<% } %>
					</table>
					<h3 class = "p-title">Recommendation</h3>
					<% if (likeRecommendation.length < 1) {%> 
					<% }else{ %>
					<p>Based on the movie you liked: <%=likeRecommendation[0].name%>
					<% } %>
					<% for (var i =0; i <likeMovie.length; i++){ %>
					<% if (likeMovie[i].movie_id !=null){ %>
					<p><%= likeMovie[i].name%></p>
					<% } %>
					<% } %>
					</div>
					</div>
</div>

			</div>
		</div>
		


	</div>

</div>
