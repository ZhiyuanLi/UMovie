<!DOCTYPE html>
<html>
   <head>
      <title>UMovie</title>
      <meta charset="utf-8">
      <title>CAJA</title>
      <!-- CSS -->
      <link rel="stylesheet" href="stylesheets/style.css" type="text/css" media="screen" />
      <link rel="stylesheet" href="stylesheets/social-icons.css" type="text/css" media="screen" />
      <link rel="stylesheet" href="" type="text/css" media="screen" id="css-skins" />
      <!--[if IE 8]>
      <link rel="stylesheet" type="text/css" media="screen" href="stylesheets/ie8-hacks.css" />
      <![endif]-->
      <!-- ENDS CSS --> 
      <!-- GOOGLE FONTS -->
      <link href='http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:light' rel='stylesheet' type='text/css'>
      <!-- JS -->
      <script src="js/jquery-1.5.1.min.js"></script>
      <script src="js/jquery-ui-1.8.13.custom.min.js"></script>
      <script src="js/easing.js"></script>
      <script src="js/jquery.scrollTo-1.4.2-min.js"></script>
      <script src="js/slides.min.jquery.js"></script>
      <script src="js/moveForm.js"></script>
      <script src="js/custom.js"></script>
      <!--[if IE]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <![endif]-->
      <!--[if IE 6]>
      <script type="text/javascript" src="js/DD_belatedPNG.js"></script>
      <script>
         /* EXAMPLE */
         //DD_belatedPNG.fix('*');
      </script>
      <![endif]-->
      <!-- ENDS JS -->
      <!-- tabs -->
      <link rel="stylesheet" href="stylesheets/tabs.css" type="text/css" media="screen" />
      <script type="text/javascript" src="js/tabs.js"></script>
      <!-- ENDS tabs -->
      <!-- prettyPhoto -->
      <script type="text/javascript" src="js/prettyPhoto/js/jquery.prettyPhoto.js"></script>
      <link rel="stylesheet" href="js/prettyPhoto/css/prettyPhoto.css" type="text/css" media="screen" />
      <!-- ENDS prettyPhoto -->
      <!-- superfish -->
      <link rel="stylesheet" media="screen" href="stylesheets/superfish.css" />
      <!-- <link rel="stylesheet" media="screen" href="stylesheets/superfish-left.css" /> -->
      <script type="text/javascript" src="js/superfish-1.4.8/js/hoverIntent.js"></script>
      <script type="text/javascript" src="js/superfish-1.4.8/js/superfish.js"></script>
      <script type="text/javascript" src="js/superfish-1.4.8/js/supersubs.js"></script>
      <!-- ENDS superfish -->
      <!-- poshytip -->
      <link rel="stylesheet" href="js/poshytip-1.0/src/tip-twitter/tip-twitter.css" type="text/css" />
      <link rel="stylesheet" href="js/poshytip-1.0/src/tip-yellowsimple/tip-yellowsimple.css" type="text/css" />
      <script type="text/javascript" src="js/poshytip-1.0/src/jquery.poshytip.min.js"></script>
      <!-- ENDS poshytip -->
   </head>
   <body>
      <!-- HEADER -->
      <div id="bottom">
      </div>
      <div id="header">
         <!-- wrapper-header -->
         <div class="wrapper">
            <!-- Social -->
            <% if (!user) { %>
            <ul class="social ">
               <li><a href="/signup" class="poshytip email" title="Join us"></a></li>
               <li><a href="/log_in" class="poshytip myspace" title="Sign in"></a></li>
               <li><a href="/auth/facebook" class="poshytip facebook" title="Facebook login"></a></li>
            </ul>
            <% } else { %>
            <toptext>
               <a href="/profile" style = "color:#e09015">My Account</a>
               &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
               <a href="/log_out" style = "color:#e09015">Logout </a>
               <br>
               <br>
               Hello, <%= user.email %>.
            </toptext>
            <% } %>
            <!-- ENDS Social -->

            <!-- headline -->
            <div id="headline" align="center">
               UMovie
            </div>
            <!-- ENDS headline -->
            <!-- Navigation -->
            <ul id="nav" class="sf-menu">
               <li><a href="/">Home</a></li>
               <li><a href="/topRanked">Top Ranked</a></li>
               <li><a href="/tagsMovie">Movie Tags</a></li>
            </ul>
            <!-- Navigation -->
         </div>
         <!-- ENDS wrapper-header -->
         <div id="top-torn"></div>
      </div>
      <!-- ENDS HEADER -->
      <!-- MAIN -->
      <div id="main">
         <!-- wrapper-main -->
         <div class="wrapper">
            <!-- Posts -->
            <div>
               <br>
               <ul class="blocks-thumbs">
                  <div class="wrapper">
                     <!--  filmbar-->      
                     <div id="filmbar">
                        <div id="filmbar-text">Profile</div>
                     </div>
                     <!-- ENDS filmbar -->
                  </div>
                  
               </ul>
            </div>


            <div class="content-col">
				
					<!-- content -->
					<div class="content">
						<div class="padding">
							<% if (userLike.length < 1) { %>
							<% } else { %>
							<h3 class="p-title">Movie I liked</h3>
							<ul class="blocks-thumbs">
								<% for (var i =0; i <userLike.length; i++){ %>
                        <li>
                           <div class="excerpt">
                              <a href= "/movies?movie_id=<%= userLike[i].movie_id %>" class="header"><%= userLike[i].name %>&nbsp;&nbsp;&nbsp;&nbsp;<span style = "color:#e09015"><strong><%= userLike[i].rating %></strong></span></a>
                           </div>
                        </li>
                        <% } %>
                     </ul>
                     <% } %>
                     <br>

                     <% if (userDislike.length < 1) { %>
                     <% } else { %>
                     <h3 class="p-title">Movie I disliked</h3>
                     <ul class="blocks-thumbs">
                        <% for (var i =0; i <userDislike.length; i++){ %>
                        <li>
                           <a href="/movies?movie_id=<%= userDislike[i].movie_id %>" class="thumb" title="An image"><img src="<%= userDislike[i].poster %>" alt="Post" width = "300" height = "450" /></a>
                           <div class="excerpt">
                              <a href= "/movies?movie_id=<%= userDislike[i].movie_id %>" class="header"><%= userDislike[i].name %>&nbsp;&nbsp;&nbsp;&nbsp;<span style = "color:#e09015"><strong><%= userDislike[i].rating %></strong></span></a>
                              <div class="meta"><%= userDislike[i].date %></div>
                           </div>
                        </li>
                        <% } %>
                     </ul>
                     <% } %>
                     <br>

                     <% if (userComment.length < 1) { %>
                     <% } else { %>
                     <div class="review">
                        <div class="padding">
                           <h3 class="p-title">My Review</h3>
                           <% for (var i =0; i <userComment.length; i++){ %>
                           <br>
                           <h6 clas="s-title">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= userComment[i].name%></h6>
                           <div id="reviewbar">
                              <div id = "reivewbar-text"><%=userComment[i].content%></div>
                           </div>
                        </div>
                     </div>                 
                     <% } %>
                     <% } %>

                     <% if (likeRecommendation.length < 1) { %>
                     <% } else { %>
                     <h3 class="p-title">Based on the movie you liked : <%=likeRecommendation[0].name%></h3>
                     <ul class="blocks-thumbs">
                        <% for (var i =0; i <likeMovie.length; i++){ %>
                        <% if (likeMovie[i].movie_id != null){ %>
                        <li>
                           <a href="/movies?movie_id=<%= likeMovie[i].movie_id %>" class="thumb" title="An image"><img src="<%= likeMovie[i].poster %>" alt="Post" width = "300" height = "450" /></a>
                           <div class="excerpt">
                              <a href= "/movies?movie_id=<%= likeMovie[i].movie_id %>" class="header"><%= likeMovie[i].name %>&nbsp;&nbsp;&nbsp;&nbsp;<span style = "color:#e09015"><strong><%= likeMovie[i].rating %></strong></span></a>
                              <div class="meta"><%= likeMovie[i].date %></div>
                           </div>
                        </li>
                        <% } %>
                        <% } %>
                     </ul>
                     <% } %>
                     <br>
                  </div>
               </div>
            </div>

            <div class="sidebar">
               <!-- Info -->
               <% if (userFriends1.length < 1 && userFriends2.length < 1) { %>
               <% } else { %>
               <h6 class="side-title"><span>Friends</span></h6>
               <% for (var i =0; i <userFriends1.length; i++){ %>
               <table>
                  <tr>
                     <td class="col-sm-4"><strong><%= userFriends1[i].person1%><strong></td>
                     <td>
                        <form action= "/deleteFriend" method="get" >
                           <button type="submit"  name = "deleteFriend" value = <%= userFriends1[i].person1%>  style= "-moz-border-radius: 10px;-webkit-border-radius: 10px; border-radius: 10px; background: #ffd8eb ;color:white;padding:5px;font-size:18px;border:none;padding:8px;">Delete Friend</button>
                        </form>
                     </td>
                  </tr>
               </table> 
               <% } %>
               <% for (var i =0; i <userFriends2.length; i++){ %>
               <tr>
                  <td class="col-sm-4"><strong><%= userFriends2[i].person2%><strong></td>
                  <td>
                     <form action= "/deleteFriend" method="get" >
                        <button type="submit"  name = "deleteFriend" value = <%= userFriends2[i].person2%>  style= "-moz-border-radius: 10px;-webkit-border-radius: 10px; border-radius: 10px; background: #ffd8eb ;color:white;padding:5px;font-size:18px;border:none;padding:8px;">Delete Friend</button>
                     </form>
                  </td>
               </tr>  
               <% } %>
               <% } %>

               <!-- ENDS Info -->

               <!-- Carbon ad -->
               <div class="ad-holder">
                  <div class="carbonad">
                     <span class="carbonad-image"><a href="#"><img src="img/dummies/carbon-ad.gif" alt="ad"></a></span>
                     <span class="carbonad-text">Pellentesque habitant morbi tristique </span>
                  </div>
               </div>
               <!-- ENDS Carbon ad -->
            </div>
         </div>
         <!-- ENDS posts -->
         <div class="clear"></div>
      </div>
      <!-- ENDS Main -->
      <!-- FOOTER -->
      <div id="footer">
         <!-- wrapper-footer -->
         <div class="wrapper">
            <div  class="to-top poshytip" title="To top">to top</div>
            <div id="bottom-text">UMovie by FF team</div>
         </div>
         <!-- ENDS wrapper-footer -->
      </div>
      <!-- ENDS FOOTER -->
   </body>
</html>
